@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "SubMaster.cshtml";
}

<div class="container">
	<h1>@Umbraco.Field("pageName")</h1>
</div>
	
@Html.Partial("introText")

		
<div class="container">
@{
	var selection = Umbraco.Content(1228).Children.Where("Visible").OrderBy("CreateDate desc");
}
<ul class="summary-list">
	
	@foreach(var item in selection){
		<li class="meeting">
			<h3><a href="@item.Url">@item.Name</a></h3>	
			<p><strong>Date:</strong> @item.meetingDate.ToShortDateString() &nbsp;
			<strong>Time:</strong> @item.meetingTime <br>		
			<strong>Location:</strong> @item.meetingLocation</p>	
		
		</li>
	}
</ul>
</div>

	
	